---

import BentoCard from "@components/BentoCard";
import SayHelloBentoCard from "@components/SayHelloBentoCard.astro";
import SpotifyBentoCard from "@components/SpotifyBentoCard";
import GithubProfileBentoCard from "./GithubProfileBentoCard.astro";
import BentoTimeCard from "@components/BentoTimeCard";
import { starbucks, stockx, reactBasicsCommands, theSimpsons, twitter} from "@lib/projects";
import BentoProjectCard from "@components/BentoProjectCard.astro";
import BentoStackCard from "./BentoStackCard.astro";
import BentoPosterCard from "./BentoPosterCard.astro";
import LinkedinBentoCard from "./LinkedinBentoCard.astro";

---

<div class="lg:max-w-6xl lg:m-auto grid place-content-center grid-cols-[repeat(1,268px)] grid-rows-[repeat(18,268px)] md:grid-cols-[repeat(2,268px)] md:grid-rows-[repeat(12,268px)] lg:grid-cols-[repeat(3,268px)]  lg:grid-rows-[repeat(999,268px)] xl:grid-cols-[repeat(4,268px)]  xl:grid-rows-[repeat(6,268px)] gap-4 py-12">
    <GithubProfileBentoCard />

    <SpotifyBentoCard client:load />

    <BentoCard className="row-span-1 col-span-1" >
        <picture class="grid place-items-center h-full">
            <img src="images/spain-flag.svg" alt="" class="size-48">
        </picture>
    </BentoCard>


    <BentoProjectCard class="row-span-2" project={stockx} />    

    <BentoStackCard class="row-span-2 lg:row-span-1 lg:col-span-2 xl:row-span-2 xl:col-span-1 " />
   
    <BentoPosterCard src="images/shape-1.svg" class="lg:col-span-2" position="top-0"  />
 
    <BentoProjectCard project={starbucks} />

    <BentoCard className="row-span-1 col-span-1" >
        <div class="grid place-items-center h-full ">
            <h1 class="font-bold text-4xl">obsessive</h1>
            <h1 class="font-bold text-4xl">obsessive</h1>
            <h1 class="font-bold text-4xl">obsessive</h1>
            <h1 class="font-bold text-4xl">obsessive</h1>
            <h1 class="font-bold text-4xl">obsessive</h1>
        </div>
    </BentoCard>

    <BentoTimeCard client:load />
   
    <BentoProjectCard project={twitter}  />
   
    
    <BentoPosterCard src="images/tyson-walpaper.webp" class="row-span-2 md:row-span-1 lg:row-span-2" position="lg:object-center object-top" />

    <BentoProjectCard class="hidden md:col-span-2 md:block" project={reactBasicsCommands} /> 

    <BentoProjectCard project={theSimpsons} />

    <LinkedinBentoCard />


    <BentoCard className="row-span-2 md:row-span-1 md:col-span-1 lg:col-span-2 xl:col-span-1 w-full ">
        <img src="images/noise-2.webp" alt="noise" class="absolute inset-0 w-full h-full">
        <p class="relative text-3xl md:text-lg lg:text-4xl xl:text-xl">
            Designed in <span class="font-bold text-3xl md:text-lg  lg:text-4xl xl:text-xl  ">Figma</span> and coded in 
            <span class="font-bold text-3xl lg:text-4xl md:text-lg  xl:text-xl ">Visual Studio Code</span> Built with 
            <span class="font-bold text-3xl  lg:text-4xl md:text-lg  xl:text-xl">Astro</span>, 
            <span class="font-bold text-3xl lg:text-4xl md:text-lg xl:text-xl">React</span>, and 
            <span class="font-bold text-3xl lg:text-4xl md:text-lg  xl:text-xl">Tailwind CSS</span>, 
            deployed with <span class="font-bold text-3xl md:text-lg lg:text-4xl xl:text-xl ">Vercel</span>. 
          </p>

    </BentoCard>
    
    
</div>


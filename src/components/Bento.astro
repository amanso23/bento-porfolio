---

import BentoCard from "@components/BentoCard";
import SayHelloBentoCard from "@components/SayHelloBentoCard.astro";
import SpotifyBentoCard from "@components/SpotifyBentoCard";
import GithubProfileBentoCard from "./GithubProfileBentoCard.astro";
import BentoTimeCard from "./BentoTimeCard";

---

<div class="max-w-6xl grid grid-cols-2 lg:grid-cols-4 grid-rows-7 gap-4 py-8 m-4 md:m-auto">
    <GithubProfileBentoCard />

    <SpotifyBentoCard client:visible />

    <BentoTimeCard client:load />

    <BentoCard className="row-span-2">
        4
    </BentoCard>

    <BentoCard className="row-span-2" >
        3
    </BentoCard>
    
    <BentoCard className="row-span-1 col-span-2 overflow-hidden" >
       <picture class="absolute left-0 top-0 w-full h-full object-contain ">
        <img src="images/shape-1.svg" alt="gradient" class="w-full h-full object-cover  ">
       </picture>
    </BentoCard>
 
    <BentoCard className="row-span-1 col-span-1 overflow-hidden group cursor-pointer"  >
        <picture class="absolute left-0 top-0 w-full h-full object-contain transition-transform duration-300 group-hover:scale-110 ">
            <img src="images/projects/starbucks-clone-aux.png" alt="starbucks-clone" class="w-full h-full object-cover ">
        </picture>
        <!-- <div class="absolute left-0 top-0 w-full h-full object-contain bg-transparent backdrop-blur-[1px] group-hover:backdrop-blur-none"></div> -->
        <h1 class="relative">Starbucks Clone</h1>
        <p class="text-secondary text-xs mt-[-4px] relative">Hecho con <span class="font-bold transition-colors duration-300 group-hover:text-orange-500">ASTRO</span></p>
    </BentoCard>

    <BentoCard className=" col-span-2 row-span-1" >
        6
    </BentoCard>
   

    <!-- <BentoStackCard class="row-span-2 col-span-2" /> -->

    <BentoCard className="row-span-1 col-span-2 overflow-hidden">
        7
    </BentoCard>
    
    <BentoCard className="row-span-1 col-span-1" >
        <div class="grid grid-cols-1 grid-rows-5 place-items-center h-full ">
            <h1 class="font-black text-4xl">obsessive</h1>
            <h1 class="font-black text-4xl">obsessive</h1>
            <h1 class="font-black text-4xl">obsessive</h1>
            <h1 class="font-black text-4xl">obsessive</h1>
            <h1 class="font-black text-4xl">obsessive</h1>
        </div>
    </BentoCard>
    <BentoCard className="row-span-1 col-span-1" >
        <picture class="grid place-items-center h-full">
            <img src="images/spain-flag.svg" alt="" class="size-48">
        </picture>
    </BentoCard>

    <SayHelloBentoCard  />

</div>


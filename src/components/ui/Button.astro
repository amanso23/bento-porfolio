---
import Message from '@icons/Message.astro'

interface Props{
    href: string,
    social: string
}

const {href, social} = Astro.props

---

<button class="border white rounded-full truncate py-2 flex items-center relative transition-colors duration-300 fill-none stroke-white  hover:bg-white hover:text-black hover:stroke-black w-full  ">
    <a 
        href={href}
        rel="noopener noreferrer"
        target="_blank"
        class="text-sm opacity-85 w-full"
        title={`Link to my ${social}`}
    >
    <p>Visit my {social}</p>
    <Message class="size-4 absolute top-[9px] right-3" /> 
    </a>
</button>
